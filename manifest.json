{
    "name": "Clerk Service Sniffer",
    "description": "Checks if Clerk is running on given page. Click around!",
    "version": "0.1",
    "author": "Alexander Bugge Stage | alexander.bugge.stage@gmail.com",
    "short_name": "CleSS",
    "manifest_version": 3,
    "background": {
      "service_worker": "js/worker.js"
    },
    "permissions": ["activeTab", "background", "storage"],
    "action": {
      "default_popup": "pages/popup.html",
      "default_title": "See More"
    },
    "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "run_at": "document_end",
        "js": [
            "js/content_script.js"
        ]
    }
    ],
    "web_accessible_resources": [
        {
            "resources": ["js/injected.js"],
            "matches": ["http://*/*","https://*/*"]
        }
    ],
    "icons": {
      "16": "/assets/icons/color/16.png",
      "32": "/assets/icons/color/32.png",
      "48": "/assets/icons/color/48.png",
      "128": "/assets/icons/color/128.png"
    }
}
